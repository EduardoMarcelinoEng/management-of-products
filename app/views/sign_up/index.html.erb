<div class="sign-up">
    <form>
        <div class="mb-3">
            <label for="inputEmail" class="form-label">E-mail</label>
            <input required type="email" class="form-control shadow-none" id="inputEmail" placeholder="Digite o seu e-mail">
        </div>
        <div class="mb-3">
            <label for="inputPassword" class="form-label">Senha</label>
            <input required type="password" class="form-control shadow-none" id="inputPassword" placeholder="Digite a sua senha">
        </div>
        <div class="mb-3">
            <label for="inputRepeatPassword" class="form-label">Repita a senha</label>
            <input required type="password" class="form-control shadow-none" id="inputRepeatPassword" placeholder="Digite a senha novamente">
        </div>
        <button type="submit" type="button" class="btn">Criar</button>
        <div class="account">
            <a href="/">Login</a>
        </div>
    </form>
</div>